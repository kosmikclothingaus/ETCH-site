/* 
  Font CSS included by layout/theme.liquid
  Included only if the theme setting of "Use my own font" is checked.
  This sample applies the Japanese font not supported by Shopify natively.
  FYI: https://help.pandectes.io/en/article/how-to-use-google-fonts-locally-on-your-theme-1848tx4/
  
  See https://shopify.dev/docs/themes/architecture/settings/fonts
*/
@font-face {
    font-family: "Noto Sans JP";
    src: url("{{ 'my_font.woff' | asset_url }}") format("woff");
}

@font-face {
  font-family: "helvetica bold";
  src: url("{{ 'Helvetica_Bold_Condensed.woff2' | asset_url }}") format("woff2"),
  url("{{ 'Helvetica_Bold_Condensed.woff' | asset_url }}") format("woff");
}

.my_font {
    font-family: 'helvetica bold';
}