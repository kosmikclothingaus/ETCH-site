const changeUrlInSelector = (obj) => {
    window.location.href = obj.value;
};

document.addEventListener("DOMContentLoaded", function () {
  const popup1 = document.getElementById("popup-info-box");
  const triggerBtn1 = document.getElementById("popup-info-trigger");
  const closeBtn1 = document.querySelector(".close-info-btn");

  const popup2 = document.getElementById("popup-size-box");
  const triggerBtn2 = document.getElementById("popup-size-trigger");
  const closeBtn2 = document.querySelector(".close-size-btn");

  const popup3 = document.getElementById("popup-ship-box");
  const triggerBtn3 = document.getElementById("popup-ship-trigger");
  const closeBtn3 = document.querySelector(".close-ship-btn");

  // Show the popup when the trigger button is clicked
  triggerBtn1.addEventListener("click", function () {
    popup1.style.display = "block";
  });

  triggerBtn2.addEventListener("click", function () {
    popup2.style.display = "block";
  });

    triggerBtn3.addEventListener("click", function () {
    popup3.style.display = "block";
  });

  // Close the popup when clicking the close button
  closeBtn1.addEventListener("click", function () {
    popup1.style.display = "none";
  });

  closeBtn2.addEventListener("click", function () {
    popup2.style.display = "none";
  });

  closeBtn3.addEventListener("click", function () {
    popup3.style.display = "none";
  });

  // Close the popup when clicking outside the popup content
  window.addEventListener("click", function (event) {
    if (event.target === popup1) {
      popup1.style.display = "none";
    }

    if (event.target === popup2) {
      popup2.style.display = "none";
    }

    if (event.target === popup3) {
      popup3.style.display = "none";
    }
  });
});


