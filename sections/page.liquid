{% endcomment %}
<div class="desktop-flex-container">
<div class="page-flex-container">
<div class="page-window-box">

<div class="window-box-header">

  <div class="window-box-title">
    <h2> C:/{{ page.title }}</h2>
  </div>

     <div class="window-box-icons"> 
        <img src="{{'window-minusbox-v2.png' | asset_url }}" alt="minusbox">
        <img src="{{ 'window-enlargebox-v2.png' | asset_url }}" alt="enlarge">
        <img src="{{ 'window-exitbox-v2.png' | asset_url }}" alt="exit">
      </div>

</div>

<div class="window-box-content">
    <div class="page-content">
   <!-- Header section -->
    <h1>{{ page.title }}</h1>
    <p>{{ page.content }}</p>
    {% if page.title == "Settings" %}
        <p>ðŸŒŽ<select>
        {% for locale in localization.available_languages %} {% assign path = request.path | remove_first: request.locale.root_url %} {% assign url = locale.root_url | append: '/' | append: path | replace: '//', '/' | replace: '//', '/' %}
        <option selected value="{{ url }}">{{ locale.name }}
        </option>
        {% endfor %}
        </select>
        <select>
        {% for country in localization.available_countries %}
        <option selected value="{{ request.path }}?currency={{ country.currency.iso_code }}&amp;country={{ country.iso_code }}">
        {{ country.currency.symbol }} {{ country.currency.iso_code }} / {{ country.iso_code }}</option>
        {% endfor %}
        </select></p>

         <!-- Search -->
        <p style="text-align: right;" class="my_right_space">
          ðŸ”Ž <input type="text" placeholder="Input keywords and push Enter" size="30" id="my_search">
        </p>

        <div style="float: none;"></div>
      
      <script>
        // See https://shopify.dev/docs/themes/navigation-search/search
        const input = document.querySelector('#my_search');
        input.addEventListener('keypress', (e) => {
          if (event.key === 'Enter') {
            const path = `{{ request.locale.root_url }}/`.replace(/\/\//, '/');
            window.location.href = `${path}search?q=${input.value}&type=product&options[unavailable_products]=hide&options[prefix]=last`;
          }
        });
        input.value = new URLSearchParams(window.location.search).get('q');
      </script>
    {% endif %}

    {% render 'home' %}

    </div>


  </div>
  </div>
</div> </div>
{% comment %}
{% endcomment %}
