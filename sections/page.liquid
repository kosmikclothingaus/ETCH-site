{
  "name": "t:sections.page.name",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Page Title",
      "default": "THIS IS MY contact page"
    }
  ],
  "enabled_on": {
    "templates": ["page"]
  }
}
