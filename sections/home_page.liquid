  {% endcomment %}

{% schema %}
{
  "name": "t:sections.home_page.name",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "my_title",
      "label": "Home page title",
      "default": "THIS IS MY HOME PAGE"
    }
  ],
  "max_blocks": 5,
  "blocks": [
    {
      "name": "My Collection",
      "type": "my_type_1",
      "settings": [
        {
          "type": "collection",
          "id": "my_collection",
          "label": "My Collection"
        }
      ]
    },
    {
      "name": "My Product",
      "type": "my_type_2",
      "settings": [
        {
          "type": "product",
          "id": "my_product",
          "label": "My Product"
        }
      ]
    },
    {
      "name": "My URL",
      "type": "my_type_3",
      "settings": [
        {
          "type": "url",
          "id": "my_url",
          "label": "My URL",
          "default": "/collections",
          "info": "Choose a URL to point all collections, etc."
        }
      ]
    }
  ],
  "enabled_on": {
    "templates": ["index"]
  }
}
{% endschema %}
