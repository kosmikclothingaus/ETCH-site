      "label": "Cart title",
      "default": "GANG GANG GANG GANG"
    }
  ],
  "blocks": [
    {
      "name": "Cart notes and attributes",
      "type": "my_type_1"
    },
    {
      "name": "Price and Checkout",
      "type": "my_type_2"
    }
  ],
  "enabled_on": {
    "templates": ["cart"]
  }
}
{% endschema %}
