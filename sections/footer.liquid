{% comment %}
  *** Footer ***
  See https://shopify.dev/docs/themes/architecture/layouts
{% endcomment %}
<div class="my_section my_footer">

  <!-- Footer section -->
  {% comment %}
  {% render 'section_title' %}

  <h3>{{ section.settings.title }}</h3>

  {% render 'hello' %}
  

  <!-- Rendering blocks -->
  {% for block in section.blocks %}
    <div class="my_block">
      <div class="my_block_title">Block ({% increment i %})</div>

      {% case block.type %}
        {% when 'my_type_1' %}
          <!-- Page link -->
          <p>
            <a href="{{ block.settings.my_page.url }}">My page: {{ block.settings.my_page.title }}</a>
          </p>

        {% when 'my_type_2' %}
          <!-- Article (Blog) link -->
          <p>
            <a href="{{ block.settings.my_article.url }}">My Article: {{ block.settings.my_article.title }}</a>
          </p>
      {% endcase %}
    </div>
  {% endfor %}
{% endcomment %}

<!-- Icons in the footer bar -->
<div class="footer-flex-container">

    <div class="footer-icon">
    <!-- language and currency selector -->
    {% comment %}
      See https://shopify.dev/docs/themes/markets/multiple-currencies-languages
      'changeUrlInSelector' is defined in 'my_js.js'.
      This sample uses simpler integration using request and route Liquid.
      See https://shopify.dev/docs/api/liquid/objects/request
    {% endcomment %}
    <a href="/pages/settings">
    <img src="{{'settings-icon-v1.png' | asset_url }}" alt="settings" width='40px'>
    </a>
    </div>
 
    <div class="footer-icon">
    <!-- Cart link -->
    <a href="/pages/contact"> <img src="{{ 'notepad-icon.png' | asset_url }}" alt="contact" width='40px'> </a>&nbsp;&nbsp;&nbsp;&nbsp;
    </div>




</div>

</div>

{% schema %}
{
  "name": "t:sections.footer.name",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Footer Title",
      "default": "THIS IS MY FOOTER"
    }
  ],
  "max_blocks": 2,
  "blocks": [
    {
      "name": "My Page",
      "type": "my_type_1",
      "settings": [
        {
          "type": "page",
          "id": "my_page",
          "label": "My Page"
        }
      ]
    },
    {
      "name": "My Article",
      "type": "my_type_2",
      "settings": [
        {
          "type": "article",
          "id": "my_article",
          "label": "My Article"
        }
      ]
    }
  ],
  "enabled_on": {
    "groups": ["footer"]
  }
}
{% endschema %}
