{% comment %}
  Base layout template
  See https://shopify.dev/docs/themes/architecture/layouts
{% endcomment %}
<!doctype html>
<html>
  <head>
    <meta name="description" content="unique hand drawn tshirts brisbane">
    <meta name="author" content="etch">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    {{ content_for_header }}

    <!-- Dynamic Font Face Declarations -->
    <style>
      @font-face {
        font-family: "helvetica bold";
        src: url("{{ 'font-helvetica-bold2.woff2' | asset_url }}") format("woff2"),
             url("{{ 'font-helvetica-bold.woff' | asset_url }}") format("woff");
      }
      @font-face {
        font-family: "helvetica bold condensed";
        src: url("{{ 'font-helvetica-bold-condensed.woff2' | asset_url }}") format("woff2"),
             url("{{ 'font-helvetica-bold-condensed.woff' | asset_url }}") format("woff");
      }
      @font-face {
        font-family: "futura bold";
        src: url("{{ 'font-futura-bold.woff2' | asset_url }}") format("woff2"),
             url("{{ 'font-futura-bold.woff' | asset_url }}") format("woff");
      }
      @font-face {
        font-family: "futura bold italic";
        src: url("{{ 'font-futura-bold-italic.woff2' | asset_url }}") format("woff2"),
             url("{{ 'font-futura-bold-italic.woff' | asset_url }}") format("woff");
      }
      @font-face {
        font-family: "consolas";
        src: url("{{ 'font-consolas.woff2' | asset_url }}") format("woff2"),
             url("{{ 'font-consolas.woff' | asset_url }}") format("woff");
      }
      @font-face {
        font-family: "segoe UI";
        src: url("{{ 'font-segoe-ui.woff2' | asset_url }}") format("woff2"),
             url("{{ 'font-segoe-ui.woff' | asset_url }}") format("woff");
      }
      
      /* Dynamic background images */
      body {
        background-image: url("{{ 'bg-desktop.png' | asset_url }}");
        background-repeat: no-repeat;
        background-size: cover;
      }
      
      @media screen and (max-width: 768px) {
        body {
          background-image: url("{{ 'bg-mobile.png' | asset_url }}");
        }
      }
    </style>

    <!-- CSS Files (load in order: base -> components -> layout) -->
    {{ 'etch-base.css' | asset_url | stylesheet_tag }}
    {{ 'etch-window-box.css' | asset_url | stylesheet_tag }}
    {{ 'etch-navigate.css' | asset_url | stylesheet_tag }}
    {{ 'etch-product.css' | asset_url | stylesheet_tag }}
    {{ 'etch-popup.css' | asset_url | stylesheet_tag }}
    {{ 'etch-collection.css' | asset_url | stylesheet_tag }}
    {{ 'etch-footer.css' | asset_url | stylesheet_tag }}
    {{ 'etch-table.css' | asset_url | stylesheet_tag }}
    {{ 'etch-layout.css' | asset_url | stylesheet_tag }}

    <!-- JavaScript Files -->
    {{ 'etch-popup.js' | asset_url | script_tag }}
    {{ 'etch-slideshow.js' | asset_url | script_tag }}
    {{ 'etch-cart.js' | asset_url | script_tag }}
    {{ 'etch-main.js' | asset_url | script_tag }}

    <!-- Conditional font CSS -->
    {% if settings.use_font == true %}
      <style>
        @font-face {
          font-family: "Noto Sans JP";
          src: url("{{ 'font-my_font.woff' | asset_url }}") format("woff");
        }
        .my_font {
          font-family: 'helvetica bold';
        }
      </style>
    {% endif %}
  </head>

  <body>
    <div class="footer-top">
      {% sections 'footer_group' %}
    </div>

    <div class="my_layout">
      <div class="desktop-flex-container">
        <div class="desktop-icons-container">
          {% render 'navigation' %}
        </div>
        
        <div class="my-layout">
          {{ content_for_layout }}
        </div>
      </div>

      <div class="footer-bottom">
        {% sections 'footer_group' %}
      </div>
    </div>
  </body>
</html>
